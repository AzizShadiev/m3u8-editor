<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
        Title="M3U8 Editor PRO + Player" Height="800" Width="1250" Background="#1E1E1E">
    
    <Window.Resources>
        <Style x:Key="PlayerCircleButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#80000000"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="38"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="19">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#CC000000"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> 
            <RowDefinition Height="Auto"/> 
            <RowDefinition Height="*"/> 
            <RowDefinition Height="Auto"/> 
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition x:Name="PlayerColumn" Width="0"/> 
        </Grid.ColumnDefinitions>

        <DockPanel Grid.Row="0" Grid.Column="0" Margin="15,15,15,5">
            <TextBox x:Name="TxtSearch" Width="250" Height="30" Background="#2D2D2D" Foreground="White" 
                     TextChanged="TxtSearch_TextChanged" VerticalContentAlignment="Center" BorderBrush="#3F3F46"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="📥 Умный импорт" Click="ImportAndMerge_Click" Width="135" Margin="5,0" Background="#2D2D30" Foreground="#E1E1E1" BorderBrush="#3E3E42"/>
                <Button Content="📂 Открыть" Click="BtnOpen_Click" Width="100" Margin="5,0" Background="#3E3E42" Foreground="White"/>
                <Button Content="💾 Сохранить" Click="BtnSave_Click" Width="120" Background="#0E639C" Foreground="White" BorderThickness="0"/>
            </StackPanel>
        </DockPanel>

        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="15,5,15,10">
            <ComboBox x:Name="ComboSort" Width="160" SelectionChanged="ComboSort_SelectionChanged">
                <ComboBoxItem Content="Как в файле" IsSelected="True"/>
                <ComboBoxItem Content="По алфавиту (А-Я)"/>
                <ComboBoxItem Content="По категориям"/>
            </ComboBox>
            <Button Content="🏷 Категории" Click="BtnRenameGroup_Click" Width="120" Margin="10,0" Background="#3E3E42" Foreground="White"/>
            <Button Content="🔍 Проверить потоки" Click="BtnCheck_Click" Width="160" Background="#2D2D30" Foreground="Cyan" BorderBrush="Cyan" BorderThickness="1"/>
            
            <TextBlock Text="Размер:" Foreground="Gray" VerticalAlignment="Center" Margin="20,0,10,0"/>
            <Button Content=" — " Click="BtnZoomOut_Click" Width="30" Height="25" Background="#3E3E42" Foreground="White"/>
            <TextBlock x:Name="LblZoom" Text="{Binding CurrentItemWidth}" Foreground="Cyan" Margin="10,0" VerticalAlignment="Center" FontWeight="Bold"/>
            <Button Content=" + " Click="BtnZoomIn_Click" Width="30" Height="25" Background="#3E3E42" Foreground="White"/>
        </StackPanel>

        <ListBox x:Name="ChannelsList" Grid.Row="2" Grid.Column="0" Background="Transparent" BorderThickness="0" Margin="10,0"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled" AllowDrop="True"
                 MouseDoubleClick="ChannelsList_MouseDoubleClick" KeyDown="ChannelsList_KeyDown"
                 PreviewMouseMove="ChannelsList_PreviewMouseMove" PreviewDragOver="ChannelsList_PreviewDragOver" Drop="ChannelsList_Drop"
                 SelectionChanged="ChannelsList_SelectionChanged">
            
            <ListBox.Resources>
                <ContextMenu x:Key="ChannelContextMenu">
                    <MenuItem Header="Скрыть / Показать" Click="MenuHideChannel_Click">
                        <MenuItem.Icon><TextBlock Text="👁" VerticalAlignment="Center"/></MenuItem.Icon>
                    </MenuItem>
                    <Separator/>
                    <MenuItem Header="Удалить" Click="MenuDeleteChannel_Click" Foreground="Red"/>
                </ContextMenu>
            </ListBox.Resources>

            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="ContextMenu" Value="{StaticResource ChannelContextMenu}"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <Border Background="Transparent">
                                    <ContentPresenter/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>

            <ListBox.ItemsPanel><ItemsPanelTemplate><WrapPanel/></ItemsPanelTemplate></ListBox.ItemsPanel>
            
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border x:Name="ChannelBorder" Background="#2D2D30" BorderBrush="#3F3F46" BorderThickness="1" CornerRadius="8" Margin="5" 
                            Width="{Binding DataContext.CurrentItemWidth, RelativeSource={RelativeSource AncestorType=Window}}" 
                            Height="{Binding DataContext.CurrentItemHeight, RelativeSource={RelativeSource AncestorType=Window}}">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Opacity" Value="1.0"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsHidden}" Value="True">
                                        <Setter Property="Opacity" Value="0.4"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        
                        <Grid Margin="8">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/> 
                                <RowDefinition Height="Auto"/> 
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Text="♻" Foreground="Orange" FontSize="14" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="2">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasBackup}" Value="True"><Setter Property="Visibility" Value="Visible"/></DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                                <TextBlock.Effect><DropShadowEffect BlurRadius="4" ShadowDepth="0" Color="Black"/></TextBlock.Effect>
                            </TextBlock>

                            <Ellipse Width="10" Height="10" Fill="{Binding StatusColor}" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="2">
                                <Ellipse.Effect><DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="0"/></Ellipse.Effect>
                            </Ellipse>

                            <Image Grid.Row="0" Source="{Binding DisplayLogo}" Stretch="Uniform" RenderOptions.BitmapScalingMode="HighQuality" Margin="0,0,0,5"/>
                            <TextBlock Grid.Row="1" Text="{Binding Name}" Foreground="White" FontSize="11" FontWeight="Bold" TextAlignment="Center" TextWrapping="Wrap" MaxHeight="32"/>
                            <TextBlock Grid.Row="2" Text="{Binding GroupTitle}" Foreground="Gray" FontSize="9" TextAlignment="Center" Opacity="0.7"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Border Grid.Row="0" Grid.RowSpan="4" Grid.Column="1" Background="#111" BorderBrush="#3F3F46" BorderThickness="1,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> 
                    <RowDefinition Height="240"/> 
                    <RowDefinition Height="*"/>    
                </Grid.RowDefinitions>

                <Button Content="✕" Click="BtnClosePlayer_Click" HorizontalAlignment="Right" 
                        Background="Transparent" Foreground="Gray" BorderThickness="0" 
                        Margin="10" FontSize="18" Panel.ZIndex="50" Cursor="Hand"/>
                
                <Border Grid.Row="1" Background="Black" Margin="10,35,10,10" CornerRadius="4" ClipToBounds="True">
                    <vlc:VideoView x:Name="VideoPlayer" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                </Border>

                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="15,5,15,15">
                        
                        <Button x:Name="BtnMute" Style="{StaticResource PlayerCircleButtonStyle}"
                                Content="🔊" Click="BtnMute_Click" 
                                HorizontalAlignment="Right" Margin="0,0,10,10"/>

                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Image Grid.Column="0" Source="{Binding SelectedItem.DisplayLogo, ElementName=ChannelsList}" 
                                   Width="60" Height="60" Stretch="Uniform" VerticalAlignment="Top" Margin="0,0,12,0"/>
                            
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding SelectedItem.Name, ElementName=ChannelsList}" 
                                           Foreground="White" FontSize="16" FontWeight="Bold" TextWrapping="Wrap"/>
                                <TextBlock Text="{Binding SelectedItem.GroupTitle, ElementName=ChannelsList}" 
                                           Foreground="Cyan" FontSize="12" Margin="0,2,0,0"/>
                                <TextBlock Text="{Binding SelectedItem.StreamUrl, ElementName=ChannelsList}" 
                                           Foreground="#444" FontSize="9" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" Margin="0,4,0,0" FontStyle="Italic"/>
                            </StackPanel>
                        </Grid>
                        
                        <Separator Margin="0,5,0,15" Background="#333"/>

                        <TextBlock Text="СЕЙЧАС В ЭФИРЕ:" Foreground="Gray" FontSize="10" FontWeight="Bold" Margin="0,0,0,5"/>
                        <Border Background="#1A1A1A" Padding="10" CornerRadius="5" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="{Binding SelectedItem.CurrentProgramTime, ElementName=ChannelsList}" 
                                           Foreground="Orange" FontSize="11" Margin="0,0,0,2"/>
                                <TextBlock Text="{Binding SelectedItem.CurrentProgramTitle, ElementName=ChannelsList}" 
                                           Foreground="White" FontSize="14" FontWeight="Bold" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>

                        <TextBlock Text="ДАЛЕЕ:" Foreground="Gray" FontSize="10" FontWeight="Bold" Margin="0,0,0,5"/>
                        <ItemsControl ItemsSource="{Binding SelectedItem.UpcomingPrograms, ElementName=ChannelsList}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" Foreground="#AAA" FontSize="13" Margin="0,0,0,5" TextWrapping="Wrap"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>

        <Button Grid.Row="3" Grid.Column="0" Content="➕ Добавить новый канал" Click="BtnAdd_Click" Height="40" Background="#3E3E42" Foreground="White" Margin="15,10"/>

        <StatusBar Grid.Row="4" Grid.ColumnSpan="2" Background="#007ACC" Foreground="White" Padding="5,0">
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Всего каналов: "/>
                    <TextBlock x:Name="TxtTotalCount" Text="0" FontWeight="Bold"/>
                    <Separator Margin="10,0" Background="White" Opacity="0.3"/>
                    <TextBlock x:Name="TxtStatus" Text="Готов"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>